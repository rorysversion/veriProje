@{
}
@model CourseSelection.Models.ForgotPasswordViewModel

<h2 class="text-center text-purple">Forgot Password</h2>

<div class="form-container">
    <form asp-action="ForgotPassword" method="post" class="forgot-password-form">
        <div class="form-group">
            <label for="Email" class="form-label text-purple">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        </div>
        <button type="submit" class="btn btn-pink btn-block">Submit</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="alert alert-success text-center">@ViewBag.Message</p>
    }
</div>

<style>
    /* Genel Arka Plan */
    body {
        background-color: #fce4ec; /* Açık pastel pembe */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Başlık Stili */
    h2 {
        margin-bottom: 30px;
        color: #9c27b0; /* Pastel mor */
    }

    /* Form Konteyneri */
    .form-container {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        background-color: #fff0f5; /* Hafif pastel pembe */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #f8bbd0;
    }

    /* Form Elemanları */
    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1c4e9; /* Pastel mor */
        border-radius: 5px;
        background-color: #f3e5f5; /* Hafif pastel mor */
        color: #6a1b9a; /* Pastel mor */
    }

        .form-control::placeholder {
            color: #ba68c8; /* Orta pastel mor */
        }

    /* Düğme Stili */
    .btn-pink {
        background-color: #f06292; /* Orta pastel pembe */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1rem;
        width: 100%;
    }

        .btn-pink:hover {
            background-color: #e91e63; /* Daha koyu pembe */
        }

    /* Alert Mesajı */
    .alert {
        margin-top: 20px;
        font-size: 1rem;
        background-color: #f8bbd0; /* Pastel pembe */
        color: #6a1b9a; /* Pastel mor */
        border-radius: 5px;
        padding: 10px;
    }
</style>

