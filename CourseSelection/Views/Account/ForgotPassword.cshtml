@model CourseSelection.Models.ForgotPasswordViewModel

<h2 class="text-center text-purple">Forgot Password</h2>

<div class="form-container">
    <form asp-action="ForgotPassword" method="post" class="forgot-password-form">
        <div class="form-group">
            <label for="Email" class="form-label text-purple">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
        </div>
        <button type="submit" class="btn btn-pink btn-block">Submit</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <p class="alert alert-success text-center">@ViewBag.Message</p>
    }
</div>

<style>
    /* Genel Arka Plan */
    body {
        background-image: url('https://img.freepik.com/free-vector/hand-drawn-international-cat-day-background-with-cats_23-2149454620.jpg'); /* Add your image URL here */
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #6c4f3d; /* Dark brown for text */
    }

    /* Başlık Stili */
    h2 {
        margin-bottom: 30px;
        color: #6c4f3d; /* Pastel coffee brown */
    }

    /* Form Konteyneri */
    .form-container {
        width: 100%;
        max-width: 400px;
        margin: 50px auto;
        background-color: rgba(255, 255, 255, 0.9); /* White with slight transparency */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        border: 1px solid #d1b79f; /* Pastel coffee brown */
    }

    /* Form Elemanları */
    .form-group {
        margin-bottom: 15px;
    }

    .form-label {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #d1b79f; /* Pastel coffee brown */
        border-radius: 5px;
        background-color: #f5e0c7; /* Soft pastel coffee brown */
        color: #6c4f3d; /* Dark brown for text */
    }

        .form-control::placeholder {
            color: #9e7f59; /* Light brown placeholder text */
        }

    /* Düğme Stili */
    .btn-pink {
        background-color: #e0a96d; /* Soft pastel coffee brown */
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 5px;
        font-size: 1rem;
        width: 100%;
    }

        .btn-pink:hover {
            background-color: #c17f4d; /* Darker pastel coffee brown */
        }

    /* Alert Mesajı */
    .alert {
        margin-top: 20px;
        font-size: 1rem;
        background-color: #e0c7a0; /* Light pastel coffee */
        color: #6c4f3d; /* Dark brown for text */
        border-radius: 5px;
        padding: 10px;
    }
</style>


