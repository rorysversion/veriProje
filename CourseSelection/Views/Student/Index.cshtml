@model IEnumerable<CourseSelection.Models.Student>

@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h1>Öğrenci Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Yeni Öğrenci Ekle</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Soyadı</th>
            <th>Email</th>
            <th>Danışman ID</th>
            <th>Kayıt Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.FirstName</td>
                <td>@student.LastName</td>
                <td>@student.Email</td>
                <td>@student.AdvisorID</td>
                <td>@student.EnrollmentDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentID" class="btn btn-info btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@student.StudentID" class="btn btn-danger btn-sm">Sil</a>
                    <a asp-action="SelectCourse" asp-route-id="@student.StudentID" class="btn btn-info btn-sm">Kurslar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
