@model List<CourseSelection.Models.Course>

<h2 class="text-center text-pink">Select Courses</h2>

<form method="post" asp-action="CourseSelection" class="p-3">
    <input type="hidden" name="StudentId" value="@ViewBag.StudentID" />

    <table class="table table-bordered">
        <thead class="table-pink">
            <tr>
                <th class="text-center">Select</th>
                <th>Course Code</th>
                <th>Course Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td class="text-center">
                        <input type="checkbox" name="selectedCourses" value="@course.CourseID" class="form-check-input" />
                    </td>
                    <td>@course.CourseCode</td>
                    <td>@course.CourseName</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <button type="submit" class="btn btn-pink">Submit</button>
    </div>
</form>

<style>
    /* Pembe temalı tasarım */
    body {
        background-color: #ffe6f2; /* Açık pembe arka plan */
        font-family: Arial, sans-serif;
    }
    h2 {
        color: #d63384; /* Parlak pembe */
    }
    .table {
        background-color: #fff0f5; /* Hafif pembe tablo arka planı */
        border-color: #ffb3d9; /* Tablo sınırları için daha koyu pembe */
    }
    .table-pink th {
        background-color: #ffb3d9; /* Başlık için koyu pembe */
        color: white;
    }
    .btn-pink {
        background-color: #ff66a3; /* Doygun pembe buton */
        color: white;
        border: none;
    }
    .btn-pink:hover {
        background-color: #ff1a75; /* Daha koyu pembe hover rengi */
    }
    .form-check-input {
        accent-color: #d63384; /* Checkbox için pembe rengi */
    }
</style>


