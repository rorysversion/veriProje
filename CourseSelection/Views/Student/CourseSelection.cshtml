@model List<CourseSelection.Models.StudentCourseSelection>

<h2>Course Selection</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<form method="post" asp-action="SubmitCourseSelection" asp-controller="Student">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Mandatory</th>
                <th>Credit</th>
                <th>Select</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model) // Model.Courses burada mevcut derslerin listesi
            {
                <tr>
                    <td>@course.Course</td>
                    <td>@course.CourseID</td>
                    @* <td>@(course.IsMandatory ? "Mandatory" : "Elective")</td>
                    <td>@course.Credit</td> *@
                    <td>
                        <input type="checkbox" name="SelectedCourseIds" value="@course.CourseID" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <input type="submit" value="Submit Selection" class="btn btn-primary" />
    </div>
</form>

