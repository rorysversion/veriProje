@model CourseSelection.Models.Student

@{
    ViewData["Title"] = "Yeni Öğrenci Ekle";
}

<h1>Yeni Öğrenci Ekle</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName">Adı</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Soyadı</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>
    <div class="form-group">
        <label asp-for="AdvisorID">Danışman ID</label>
        <input asp-for="AdvisorID" class="form-control" type="number" />
    </div>
    <div class="form-group">
        <label asp-for="EnrollmentDate">Kayıt Tarihi</label>
        <input asp-for="EnrollmentDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

