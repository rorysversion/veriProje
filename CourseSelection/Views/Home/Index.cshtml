@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-5">
    <div class="text-center">
        <!-- Başlık -->
        <h1 class="display-4 text-primary">Hoş Geldiniz!</h1>
        <p class="lead text-secondary">Course Selection Uygulamasına hoş geldiniz!</p>
        <hr class="my-4">

        <!-- Uygulama Özellikleri -->
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-success">Ders Seçimi</h5>
                        <p class="card-text">
                            Kolay ve hızlı bir şekilde mevcut derslerden seçim yapabilirsiniz.
                        </p>
                        <i class="fas fa-book fa-2x text-success"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-info">Onay Süreci</h5>
                        <p class="card-text">
                            Seçtiğiniz dersler, yönetici onayından geçtikten sonra kesinleşir.
                        </p>
                        <i class="fas fa-check-circle fa-2x text-info"></i>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Takip ve Yönetim</h5>
                        <p class="card-text">
                            Seçimlerinizi takip edin ve gerektiğinde düzenlemeler yapın.
                        </p>
                        <i class="fas fa-tasks fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap ve FontAwesome entegrasyonu -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<style>
    body {
        background-image: url('https://e1.pxfuel.com/desktop-wallpaper/754/619/desktop-wallpaper-old-books-backgrounds-old-library.jpg'); /* Arka plan resmi URL'si */
        background-size: cover; /* Resmi kapsayacak şekilde ölçeklendirir */
        background-repeat: no-repeat; /* Tekrar etmeyi önler */
        background-attachment: fixed; /* Sayfa kaydırıldığında arka plan sabit kalır */
        background-position: center; /* Resmi merkeze hizalar */
    }

    .container {
        background-color: rgba(255, 255, 255, 0.8); /* Beyaz yarı saydam arka plan */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>



