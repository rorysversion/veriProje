@model CourseSelection.Models.Advisor

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advisor Details</title>
    <style>
        /* Genel sayfa stili */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5; /* Açık gri arka plan */
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #5d2f6e; /* Başlık için koyu mor */
            margin-bottom: 20px;
        }

        /* Tablo stili */
        table {
            width: 60%;
            margin: 0 auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); /* Tablo için hafif gölge */
        }

        th, td {
            padding: 15px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background-color: #7f4f96; /* Başlıklar için mor */
            color: #fff;
        }

        td {
            background-color: #f9f9f9; /* Hücrelerin açık gri rengi */
            border-bottom: 1px solid #e0e0e0; /* Hücreler arası ince sınır */
        }

        tr:hover td {
            background-color: #f2f2f2; /* Satır üzerine gelindiğinde arka plan değişir */
        }

        /* Tablo başlığına ve hücrelere genel stil */
        td, th {
            text-align: center;
            border: 1px solid #ddd;
        }

        /* Butonlar */
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

            .action-buttons a {
                padding: 12px 25px;
                color: white;
                text-decoration: none;
                border-radius: 8px;
                font-size: 16px;
                background-color: #5d2f6e; /* Buton rengi koyu mor */
                transition: transform 0.3s, background-color 0.3s;
            }

                .action-buttons a:hover {
                    background-color: #7f4f96; /* Hover efekti koyu mor */
                }

    </style>
</head>
<body>

    <h1>Advisor Details</h1>

    <!-- Tablo -->
    <table>
        <tr>
            <th>Full Name</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>@Model.Title</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>@Model.Department</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
    </table>

   
</body>
</html>



