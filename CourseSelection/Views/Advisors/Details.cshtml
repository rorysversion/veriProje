@model List<CourseSelection.Models.Advisor>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Advisors List</title>
    <style>
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5; 
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #5d2f6e; 
            margin-bottom: 20px;
        }

        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); 
        }

        th, td {
            padding: 12px;
            text-align: left;
            font-size: 16px;
        }

        th {
            background-color: #7f4f96; 
            color: #fff;
        }

        td {
            background-color: #f9f9f9; 
            border-bottom: 1px solid #e0e0e0; 
        }

        tr:hover td {
            background-color: #f2f2f2; 
        }

        
        td, th {
            text-align: center;
            border: 1px solid #ddd;
        }

       
        table, th, td {
            border: 1px solid #dcdcdc; 
        }

       
        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

            .action-buttons a {
                padding: 12px 25px;
                color: white;
                text-decoration: none;
                border-radius: 8px;
                font-size: 16px;
                transition: transform 0.3s, background-color 0.3s;
            }

        .btn-info {
            background-color: #5d2f6e; 
        }

            .btn-info:hover {
                background-color: #7f4f96; 
            }

    </style>
</head>
<body>

    <h1>Advisor List</h1>

    
    <table>
        <thead>
            <tr>
                <th>Advisor ID</th>
                <th>Full Name</th>
                <th>Title</th>
                <th>Department</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var advisor in Model)
            {
                <tr>
                    <td>@advisor.AdvisorID</td>
                    <td>@advisor.FullName</td>
                    <td>@advisor.Title</td>
                    <td>@advisor.Department</td>
                    <td>@advisor.Email</td>
                </tr>
            }
        </tbody>
    </table>

    

</body>
</html>

