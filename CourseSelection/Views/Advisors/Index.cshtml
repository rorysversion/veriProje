@model CourseSelection.Models.Advisor

<!DOCTYPE html>
<html>
<head>
    <title>Advisors</title>
    <style>
        /* Genel sayfa ve tablo stili */
        body {
            font-family: Arial, sans-serif;
            background-color: #ffe6f2; /* Pastel pembe arka plan */
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #5d2f6e;
            text-align: center; /* Başlık ortalanmış */
        }

        /* Butonlar için ortak stil */
        .action-buttons {
            display: flex;
            justify-content: center; /* Butonları yatayda ortalama */
            gap: 15px;
            margin-top: 30px;
        }

            .action-buttons a {
                padding: 12px 25px;
                color: white;
                text-decoration: none;
                border-radius: 8px;
                border: 1px solid #f1c6d3; /* Pastel pembe kenarlık */
                font-size: 16px;
                text-align: center;
                transition: background-color 0.3s, transform 0.3s; /* Geçiş efektleri */
            }

                .action-buttons a:hover {
                    transform: scale(1.05); /* Hoverda buton büyür */
                    opacity: 0.9;
                }

        /* Butonlar için pastel pembe tonları */
        .btn-info {
            background-color: #f48fb1; /* Pastel pembe */
        }

            .btn-info:hover {
                background-color: #f06292; /* Koyu pembe hover efekti */
            }

        .btn-primary {
            background-color: #f1a7c1; /* Hafif pembe */
        }

            .btn-primary:hover {
                background-color: #f8bbd0; /* Koyu pembe hover efekti */
            }

        .btn-success {
            background-color: #f8c9d6; /* Soluk pembe */
        }

            .btn-success:hover {
                background-color: #f06292; /* Koyu pembe hover efekti */
            }

        .btn-warning {
            background-color: #fddde1; /* Açık pembe */
        }

            .btn-warning:hover {
                background-color: #f06292; /* Koyu pembe hover efekti */
            }

        .btn-danger {
            background-color: #f7a6b5; /* Daha yoğun pembe */
        }

            .btn-danger:hover {
                background-color: #f06292; /* Koyu pembe hover efekti */
            }

    </style>
</head>
<body>

    <h1>Advisor Dashboard</h1>

    <div class="action-buttons">
        <a asp-action="Details" asp-route-id="@Model.AdvisorID" class="btn btn-info">View Advisor List</a>
        <a asp-action="PersonalInfo" asp-route-id="@Model.AdvisorID" class="btn btn-primary">View My Info</a>
        <a asp-action="MyStudents" asp-route-id="@Model.AdvisorID" class="btn btn-success">View My Students</a>
        <a asp-action="ApproveCourses" asp-route-id="@Model.AdvisorID" class="btn btn-danger">Approve Courses</a>
    </div>

</body>
</html>


